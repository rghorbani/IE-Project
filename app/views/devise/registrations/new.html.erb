<div class="row">
	<div class="col-md-offset-4 col-md-4">
		<div id="index-form" class="panel panel-default">
			<div class="panel-body">
				<div class="row">
  				<!-- <h2>Sign up</h2> -->

  				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class=>'form', :role=>'form') do |f| %>
  				  <% if defined?(devise_error_messages) %>
            <div class="alert alert-notice"><%= devise_error_messages! %></div>
            <% end %>

  				  <div class="form-group">
              <%= f.label :email, :class=>'col-md-2 form-label' %>
    				  <div class="col-md-8 input-group">
    				  	<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
    				  	<%= f.email_field :email, :placeholder=>'Email', :class=>'form-control', :autofocus => true %>
              </div>
  				  </div>

  				  <div class="form-group">
              <%= f.label :password, :class=>'col-md-2 form-label' %>
    				  <div class="col-md-8 input-group">
    				  	<span class="input-group-addon"><i class="fa fa-key"></i></span>
    				  	<%= f.password_field :password, :placeholder=>'Password', :class=>'form-control' %>
              </div>
  				  </div>

  				  <div class="form-group">
              <%= f.label :password_confirmation, :class=>'col-md-2 form-label' %>
    				  <div class="col-md-8 input-group">
    				  	<span class="input-group-addon"><i class="fa fa-key"></i></span>
    				  	<%= f.password_field :password_confirmation, :placeholder=>'Confirm Password', :class=>'form-control' %>
              </div>
  				  </div>

  				  <%= f.submit "Sign up", :class=>'col-md-offset-5 col-md-2 btn btn-primary btn-lg' %>
          <% end %>
          <br>
          <div>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
