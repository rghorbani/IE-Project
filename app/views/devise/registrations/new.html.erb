<div class="container">
	<div class="col-md-4 col-md-offset-4">
		<div class="panel">
			<div class="panel-heading">
				<h3>ثبت نام&nbsp;<small>حساب کاربری</small></h3>
			</div>
			<div class="panel-body">
				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class=>'form', :role=>'form') do |f| %>
				<% if defined?(devise_error_messages) %>
				<div class="alert alert-notice"><%= devise_error_messages! %></div>
				<% end %>

				<div class="form-group">
					<%= f.label :email,"ایمیل", :class=>'control-label' %>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
						<%= f.email_field :email, :placeholder=>'ایمیل', :class=>'form-control', :autofocus => true %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :password,"گذرواژه", :class=>'control-label' %>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-key"></i></span>
						<%= f.password_field :password, :placeholder=>'گذرواژه', :class=>'form-control' %>
					</div>
				</div>

				<div class="form-group">
					<%= f.label :password_confirmation,"تایید گذرواژه", :class=>'control-label' %>
					<div class="input-group">
						<span class="input-group-addon"><i class="fa fa-key"></i></span>
						<%= f.password_field :password_confirmation, :placeholder=>'تایید گذرواژه', :class=>'form-control' %>
					</div>
				</div>

				<%= f.submit "ثبت نام", :class=>'btn btn-lg btn-success col-md-12' %>
				
				<% end %>
				<br>
				<hr>
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>
