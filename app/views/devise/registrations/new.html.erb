<div class="widget_login"><div class="page-header">

  				<!-- <h2>Sign up</h2> -->
          <h3>
   ورود مدیر
    <small>به حساب خود وارد شوید</small>
  </h3>

  				<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :class=>'form', :role=>'form') do |f| %>
  				  <% if defined?(devise_error_messages) %>
            <div class="alert alert-notice"><%= devise_error_messages! %></div>
            <% end %>

  				  <div class="control-group">
              <%= f.label :email,"ایمیل", :class=>'control-label' %>
    				  <div class="input-group">
    				  	<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
    				  	<%= f.email_field :email, :placeholder=>'ایمیل', :class=>'input-xlarge', :style=>'width:285px; padding:10px;', :autofocus => true %>
              </div>
  				  </div>

  				  <div class="form-group">
              <%= f.label :password,"گذرواژه", :class=>'control-label' %>
    				  <div class="input-group">
    				  	<span class="input-group-addon"><i class="fa fa-key"></i></span>
    				  	<%= f.password_field :password, :placeholder=>'گذرواژه', :class=>'input-xlarge' %>
              </div>
  				  </div>

  				  <div class="form-group">
              <%= f.label :password_confirmation,"تایید گذرواژه", :class=>'control-label' %>
    				  <div class="input-group">
    				  	<span class="input-group-addon"><i class="fa fa-key"></i></span>
    				  	<%= f.password_field :password_confirmation, :placeholder=>'تایید گذرواژه', :class=>'input-xlarge' %>
              </div>
  				  </div>

  				  <%= f.submit "ثبت نام", :class=>'large green button radius' %>
            </div></div><hr><p><a href="#">گذرواژه خود را فراموش کرده ام</a><span class="pull-right"><a href="register.htm">ثبت نام حساب کاربری</a></span></p>

          <% end %>
          <br>
          <div>
            <%= render "devise/shared/links" %>
          </div>
  </div>
</div>
