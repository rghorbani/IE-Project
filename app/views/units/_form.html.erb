<%= form_for(@unit) do |f| %>
  <% if @unit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@unit.errors.count, "error") %> prohibited this unit from being saved:</h2>

      <ul>
      <% @unit.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :user_id, :class => 'form-label' %>
    <div class="input-group">
    <%= f.number_field :user_id, :class => 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :building_id, :class => 'form-label' %>
    <div class="input-group">
    <%= f.number_field :building_id, :class => 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :floor_number, "طبقه" ,:class => 'form-label' %>
    <div class="input-group">
    <%= f.number_field :floor_number, :class => 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :side, "جهت مکانی" , :class => 'form-label' %>
    <div class="input-group">
    <%= f.text_field :side, :class => 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :unit_number, "شماره واحد" , :class => 'form-label' %>
    <div class="input-group">
    <%= f.number_field :unit_number, :class => 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :area, "مساحت" , :class => 'form-label' %>
    <div class="input-group">
    <%= f.number_field :area, :class => 'form-control'  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :resident_count, "تعداد سکنه" , :class => 'form-label' %>
    <div class="input-group">
    <%= f.number_field :resident_count, :class => 'form-control'  %>
    </div>
  </div>
  <div class="actions">
    <br/>
    <%= f.submit "تائید", :class => 'btn btn-success' %>
  </div>
<% end %>
