<div class="container">
  <div class="panel">
    <% if @units.size == 1 %>
    <% unit = @units.first %>
    <div class="panel-heading">
      <h3><% if unit.building.name != nil %>
        واحد <%= unit.unit_number %> ساختمان <%= unit.building.name %>
        <% else %>
        واحد <%= unit.unit_number %>
        <% end %></h3>
      </div>
      <div class="panel-body">
        <br>
        <div class="row">
          <div class="col-md-8">
            <p>
              <strong>مالک:</strong>
              <%= unit.user.profile.first_name %> <%= unit.user.profile.last_name %>
            </p>

            <p>
              <strong>نام ساختمان:</strong>
              <%= unit.building.name %>
            </p>

            <p>
              <strong>شماره واحد:</strong>
              <%= unit.unit_number %>
            </p>

            <p>
              <strong>طبقه:</strong>
              <%= unit.floor_number %>
            </p>
          </div>
          <div class="col-md-4">
            <!-- Picture -->
          </div>
        </div>
        <div class="pull-left">
          <%= link_to unit,:class => "btn btn-success" do %>
          <i class="fa fa-folder-open-o"></i>&nbsp;
          <%=t :show_unit_info %>
          <% end %>
        </div>
        <br>
        <br/>
        <h3>لیست قبوض</h3>
        <div class="row-fluid">
          <div class="table-responsive">
            <table class="table table-success table-condensed table-striped table-bordered table-hover">
              <thead>
                <tr>
                  <th style="width:4%;">ردیف</th>
                  <th style="width:15%;">توضیحات</th>
                  <th style="width:10%;">مبلغ</th>
                  <th style="width:10%;">مهلت پرداخت</th>
                  <th style="width:15%;">وضعیت</th>
                </tr>
              </thead>
              <tbody>
                <% @bills = unit.bills %>
                <% @bills.each_with_index do |bill,index| %>
                <tr>
                  <th><%= index+1 %></th>
                  <th><%= bill.description %></th>
                  <th><%= bill.price %></th>
                  <th><%= to_jalali_date(bill.deadline) %></th>
                  <th><% if bill.status == false %>
                  <%= 'پرداخت نشده' %><% else %><%= 'پرداخت شده' %><% end %></th>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="panel-footer">
        <div class="left">
        </div>
      </div>
      <% else %>
      <div class="panel-heading">
      <h1>لیست واحدها</h1>
      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ساختمان</th>
                <th>شماره واحد</th>
                <th>طبقه</th>
                <th>جهت مکانی</th>
                <th style="width:10%"></th>
              </tr>
            </thead>

            <tbody>
              <% @units.each do |unit| %>
              <tr>
                <td><%= unit.building.name %></td>
                <td><%= unit.unit_number %></td>
                <td><%= unit.floor_number %></td>
                <td><%= unit.side %></td>
                <td>
                  <%= link_to unit,:class => "btn btn-success" do %>
                  <i class="fa fa-folder-open-o"></i>&nbsp;
                  <%=t :show_unit_info %>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <% end %>
    </div>
  </div>