<%= form_for(News.new, :remote => true) do |f| %>

  <div class="form-group hidden">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>
  <div class="form-group">
    <%= f.label :building_id, "ساختمان", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-building"></i></div>
      <%= f.collection_select(:building_id, @buildings, :id, :name_of_building, {:include_blank => true}, :class => 'form-control') %>
      <%#= f.number_field :receiver_id, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, "عنوان", :class => 'control-label' %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, "متن", :class => 'control-label' %>
    <%= f.text_area :content, :class => 'form-control' %>
  </div>
  <div class="checkbox">
    <%= f.label :system, "خبر سیستمی", :class => 'control-label' %>
    <%= f.check_box :system, :class => 'checkbox' %>
  </div>
  <div class="form-group">
    <%= f.submit "ایجاد", :class => 'btn btn-success col-sm-4' %>
    &nbsp;
    <button id="cancel" type="button" class="btn btn-default" data-dismiss="modal">انصراف</button>
  </div>
<% end %>
