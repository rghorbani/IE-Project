
<div class="row">
	<div class="container">
	<div class="col-md-offset-4 col-md-4">
		<% if not user_signed_in? %>
		<div class="panel-heading">
        	<h3>ورود&nbsp;<small>به سیستم</small></h3>
      	</div>
		<div id="index-form" class="panel panel-default">
			<div class="panel-body">
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class=>'form', :role=>'form') do |f| %>

					<div class="form-group">
					<%= f.label :email,"ایمیل", :class=>'form-label' %>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-envelope"></i></span>
							<%= f.email_field :email, :placeholder=>'ایمیل', :class=>'form-control ltr', :autofocus => true %>
						</div>
					</div>

					<div class="form-group">
						<%= f.label :password,"گذرواژه", :class=>'form-label' %>
						<div class="input-group">
							<span class="input-group-addon"><i class="fa fa-key"></i></span>
							<%= f.password_field :password, :placeholder=>'گذرواژه', :class=>'form-control ltr' %>
						</div>
					</div>

					<% if devise_mapping.rememberable? -%>
					<div class="form-group">
						<div class="controls">
							<%= f.check_box :remember_me %>&nbsp;<%= f.label :remember_me,"مرا به خاطر بسپار", :class=>'form-label' %>
						</div>
					</div>
					<% end -%>

					<%= f.submit "ورود", :class=>'btn btn-lg btn-primary col-sm-12' %>
					<% end %>			
			</div>
			<br/>
			<div class="panel-footer">
				<a href="/users/password/new"><i class="fa fa-arrow-right"></i>&nbsp;گذرواژه خود را فراموش کرده اید؟</a>
				<a href="/users/sign_up" class="pull-left">ثبت نام&nbsp;<i class="fa fa-arrow-left"></i></a>
			</div>
		</div>
		<% else %>
		<br/>
		<div id="index-form" class="panel">
			<div class="panel-body">
				<div class="row-fluid">
					<div class="text-center">
						<h2>به سیستم شارژ ساختمان خوش آمدید<br/><br/><br/><br/><br/><br/> <a href="/charge/dashboard">مشاهده داشبورد</a></h2>
					</div>
				</div>
			</div>
		</div>
		<% end %>
	</div>
	</div>
</div>
