<div class="container">
  <div class="panel">
    <div class="panel-heading">
    <h1>لیست پلان های هزینه</h1>
    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ساختمان</th>
              <th>نام</th>
              <th>شماره</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.building_id %></td>
              <td><%= plan.name %></td>
              <td><%= plan.number %></td>
              <td>
                <div class="btn btn-success"><i class="fa fa-plus"></i>&nbsp;<%= link_to t('Show'), plan, :class => 'btn-text' %></div>
                &nbsp;
                <div class="btn btn-primary"><i class="fa fa-pencil"></i>&nbsp;<%= link_to t('Edit'), edit_plan_path(plan), :class => 'btn-text' %></div>
                &nbsp;
                <div class="btn btn-danger"><i class="fa fa-trash-o"></i>&nbsp;<%= link_to t('Destroy'), plan, method: :delete, data: { confirm: 'آیا اطمینان دارید؟' }, :class => 'btn-text' %></div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>

      <%= link_to 'ایجاد پلان جدید', new_plan_path(:building_id => @building_id) %>
      <br>
      <%= link_to 'ساختمان ها', buildings_path %>
    </div>
  </div>
</div>