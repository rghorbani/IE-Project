<h1>Listing plans</h1>

<table>
  <thead>
    <tr>
      <th>Building</th>
      <th>Formula</th>
      <th>Unit</th>
      <th>Rate</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.building_id %></td>
        <td><%= plan.formula %></td>
        <td><%= plan.unit_id %></td>
        <td><%= plan.rate %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

