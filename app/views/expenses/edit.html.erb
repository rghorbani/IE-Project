
<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <h1>ویرایش هزینه</h1>
    </div>
    <div class="panel-body">
    	<div class="row">
    		<div class="col-md-5">

				<%= render 'form' %>


        <%= link_to expense_path(@expense),:class => "btn btn-primary" do %>
        <i class="fa fa-arrow-circle-o-right"></i>&nbsp;
        <%= t('Back') %>
        <% end %>

        <%= link_to @expense, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" do %>
        <i class="fa fa-trash-o"></i>&nbsp;
        <%= 'حذف این هزینه' %>
        <% end %>

			</div>
    		<div class="col-md-7"></div>
    	</div>
    </div>
  </div>
</div>
