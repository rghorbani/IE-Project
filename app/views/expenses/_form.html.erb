<%= form_for(@expense) do |f| %>
  <% if @expense.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@expense.errors.count, "error") %> prohibited this expense from being saved:</h2>

      <ul>
      <% @expense.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group hidden">
    <%= f.label :building_id, :class => 'control-label' %><br>
    <%= f.number_field :building_id, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price,"مبلغ", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-money"></i></div>
      <%= f.number_field :price, :class => 'form-control' %>
      <div class="input-group-addon">ریال</div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description,"توضیحات", :class => 'control-label' %><br>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">


    <%= f.label :release_date,"تاریخ صدور", :class => 'control-label' %><br/>
    <% @jalali = JalaliDate.to_jalali(Time.now)%>
    <%= 'روز'%><%= select_tag  "ja_rel_dd", options_for_select(1..31, @jalali.day) %>/
    <%= 'ماه'%><%= select_tag "ja_rel_mm", options_for_select(1..12, @jalali.month) %>/
    <%= 'سال'%><%= select_year(@jalali.year, {:start_year => 1393, :end_year => 1400}, {:name =>"ja_rel_yyyy"}) %>
  </div>
  <div class="form-group">
    <%= f.label :deadline,"زمان پرداخت", :class => 'control-label' %><br>
    <% @jalali = JalaliDate.to_jalali(Time.now)%>
    <%= 'روز'%><%= select_tag  "ja_ded_dd", options_for_select(1..31, @jalali.day) %>/
    <%= 'ماه'%><%= select_tag "ja_ded_mm", options_for_select(1..12, @jalali.month) %>/
    <%= 'سال'%><%= select_year(@jalali.year, {:start_year => 1393, :end_year => 1400}, {:name =>"ja_ded_yyyy"}) %>
  </div>
  <div class="form-group">
    <%= f.label :number,"شماره سریال", :class => 'control-label' %><br>
    <%= f.number_field :number, :class => 'form-control' %>
  </div>
  <br/>
  <div>
  <h3>انتخاب پلان هزینه</h3>
  </div>
  <div id="plan-choose">
  <% @expense.building.plans.each do |plan| %>
    <div>
      <%= radio_button_tag :plan_id, plan.id %>
      &nbsp;
      <%= plan.name %>
    </div>
  <% end %>
  </div>
  <%= link_to 'ایجاد پلان جدید', "#", "data-toggle" => "modal", 'data-target' => '#newPlan' %>
  <br/>
  <br/>
  <div class="form-group">
    <%= f.submit "تائید", :class => 'btn btn-success col-sm-4' %>
  </div>
<% end %>

<div class="modal fade" id="newPlan" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        ایجاد پلان
      </div>
      <div class="modal-body">

        <%= render '/plans/form_modal' %>

      </div>
    </div>
  </div>
</div>