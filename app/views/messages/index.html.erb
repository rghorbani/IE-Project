<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <h2>پیغام ها</h2>
    </div>
    <div class="panel-body">
      <div class="col-md-10 col-md-offset-1">

        <table class="table table-hover">
          <thead>
            <tr>
              <th>فرستنده</th>
              <th>متن</th>
              <th>مشاهده شده</th>
              <th>Parent</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @messages.each do |message| %>
              <tr>
                <td><%= message.sender_id %></td>
                <td><%= message.content %></td>
                <td><%= message.seen %></td>
                <td><%= message.parent_id %></td>
                <td>
                  <%= link_to t('Show'), message, :class => 'btn btn-info' %>&nbsp;
                  <%= link_to t('Edit'), edit_message_path(message), :class => 'btn btn-primary' %>&nbsp;
                  <%= link_to t('Destroy'), message, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'پیغام جدید', "#", :class => 'btn btn-success col-md-4', "data-toggle" => "modal", 'data-target' => '#newMessage' %>
      </div>
    </div>
  </div>
</div>
