<%= form_for(@profile, :remote => true, method: "patch", :html => {:class => "form-horizontal #{controller.action_name}_profile", :role => 'form'}) do |f| %>

  <div id="flash_notice" style="display:none"></div>

  <div class="form-group">
    <%= f.label :first_name,"نام", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name,"نام خانوادگی", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender,"جنسیت", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= select :profile, :gender, [['Male', 0], ['Female', 1]], {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :family_size,"تعداد خانواده", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.number_field :family_size, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cardnumber,"شماره کارت بانکی", :class => 'control-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_field :cardnumber, :class => 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'تائید', :id => 'profile_submit', :class => 'btn btn-lg btn-primary col-md-6' %>
  </div>
<% end %>
