<%= form_for(@profile, :remote => true, method: "patch") do |f| %>

  <div id="flash_notice" style="display:none"></div>

  <div class="form-group">
    <%= f.label :first_name, :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_area :first_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_area :last_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, :class => 'form-label' %>
    <%= f.check_box :gender, :class => 'form-control checkbox' %>
  </div>
  <div class="form-group">
    <%= f.label :family_size, :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.number_field :family_size, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cardnumber, :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_area :cardnumber, :class => 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'تغییر', :id => 'profile_submit', :class => 'btn btn-lg btn-primary' %>
  </div>
<% end %>
