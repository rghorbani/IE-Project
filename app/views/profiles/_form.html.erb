<%= form_for(@profile) do |f| %>

  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_area :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_area :last_name %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.check_box :gender %>
  </div>
  <div class="field">
    <%= f.label :family_size %><br>
    <%= f.number_field :family_size %>
  </div>
  <div class="field">
    <%= f.label :cardnumber %><br>
    <%= f.text_area :cardnumber %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
