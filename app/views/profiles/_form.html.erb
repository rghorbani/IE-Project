<%= form_for(@profile) do |f| %>

  <div class="form-group">
    <%= f.label :first_name,"نام", :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_field :first_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name,"نام خانوادگی", :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender ,"جنسیت", :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= select :profile, :gender, [['Male', 0], ['Female', 1]], {}, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :family_size,"تعداد خانواده", :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.number_field :family_size, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :cardnumber,"شماره کارت بانکی", :class => 'form-label' %>
    <div class="input-group">
      <div class="input-group-addon"><i class="fa fa-user"></i></div>
      <%= f.text_field :cardnumber, :class => 'form-control' %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit 'تائید', :id => 'profile_submit', :class => 'btn btn-lg btn-success col-md-4' %>
    &nbsp;
    &nbsp;
    &nbsp;
    <%= link_to "بازگشت", :back, :class => 'btn btn-lg btn-danger col-md-4' %>
  </div>
<% end %>
