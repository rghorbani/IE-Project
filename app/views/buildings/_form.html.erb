    <%= f.label :floor_cnt, "تعداد طبقات", :class => 'form-label'%>
    <div class="input-group">
      <%= f.number_field :floor_cnt, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :units_cnt, "تعداد واحد", :class => 'form-label' %>
    <div class="input-group">
      <%= f.number_field :units_cnt, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group hide">
    <%= f.label :user_id, "مدیر", :class => 'form-label' %>
    <div class="input-group">
      <%= f.number_field :user_id, :class => 'form-control' %>
    </div>
  </div>
