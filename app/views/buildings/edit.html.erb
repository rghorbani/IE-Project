<h3><% if @building.name != nil %>
          ویرایش <%= @building.name %>
          <% else %>
          ویرایش ساختمان
          <% end %></h3>

<%= render 'form' %>

<br/>
<br/>

<%= link_to building_path(@building),:class => "btn btn-primary" do %>
<i class="fa fa-arrow-circle-o-right"></i>&nbsp;
<%= t('Back') %>
<% end %>

<%= link_to @building, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger" do %>
<i class="fa fa-trash-o"></i>&nbsp;
<%= 'حذف این ساختمان' %>
<% end %>


