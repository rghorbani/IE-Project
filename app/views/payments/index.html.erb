<div class="container">
  <div class="panel">
    <div class="panel-heading">
      <h1>Listing payments</h1>
    </div>
    <div class="panel-body">

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Bill</th>
            <th>User</th>
            <th>Amount</th>
            <th>Trace number</th>
            <th>Status</th>
            <th>Message</th>
            <th>Date</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td><%= payment.bill_id %></td>
              <td><%= payment.user_id %></td>
              <td><%= payment.amount %></td>
              <td><%= payment.trace_number %></td>
              <td><%= payment.status %></td>
              <td><%= payment.message %></td>
              <td><%= payment.date %></td>
              <td><%= link_to t('Show'), payment %></td>
              <td><%= link_to t('Edit'), edit_payment_path(payment) %></td>
              <td><%= link_to t('Destroy'), payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Payment', new_payment_path, :class => 'btn btn-success' %>
    </div>
  </div>
</div>
