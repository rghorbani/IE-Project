
<div class="container">
  <div class="panel">
    <div class="panel-heading">
    </div>
    <div class="panel-body">
      <p>
        <strong>Bill:</strong>
        <%= @payment.bill_id %>
      </p>

      <p>
        <strong>User:</strong>
        <%= @payment.user_id %>
      </p>

      <p>
        <strong>Amount:</strong>
        <%= @payment.amount %>
      </p>

      <p>
        <strong>Trace number:</strong>
        <%= @payment.trace_number %>
      </p>

      <p>
        <strong>Status:</strong>
        <%= @payment.status %>
      </p>

      <p>
        <strong>Message:</strong>
        <%= @payment.message %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= @payment.date %>
      </p>

      <%= link_to t('Edit'), edit_payment_path(@payment), :class => 'btn btn-primary' %>&nbsp;
      <%= link_to t('Back'), payments_path, :class => 'btn btn-orange' %>
    </div>
  </div>
</div>
